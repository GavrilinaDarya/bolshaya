//colors
golden = #CAAF77;
dark-violet-blue = #3E5066

body
	display flex
	margin 0
	font-family Roboto
	font-style normal
	font-weight: 400
	font-size: 14px
	color: #000000;
	min-width 900px
	// min-width 320px
	min-height  480px
	flex-direction: column;


*
	outline none
	&::-webkit-scrollbar
		width: 10px;
	&::-webkit-scrollbar:horizontal
		height 6px
	&::-webkit-scrollbar-track-piece
		background inherit
	&::-webkit-scrollbar-thumb
		border-radius 1.5px
		background-color: #c1c1c1
		cursor pointer

a
	text-decoration: none
	color inherit


.section
	display: flex
	// &.min-top
	// 	.section-content
	// 		margin-top 0
		
.section-content
	// padding: 50px 180px 0 180px
	margin: 70px auto 0 auto;
	max-width: 1200px;
	display: flex;
	flex 1
	flex-direction: column;
	overflow hidden
	&.big-bottom
		margin-bottom: 40px
	&.mini
		margin: 0 auto
	&.row
		flex-direction: row;
	@media screen and (min-width: 760px) and (max-width: 1300px)
		padding: 0 50px
	@media screen and (max-width: 760px)
		padding: 0 20px


.section__head
	padding-bottom 22px
	border-bottom: 1px solid #C4C4C4;
	display: flex;
	justify-content: space-between;
.section__head-title
	font-weight: 500;
	font-size: 32px;
	line-height: 37px;
	margin 0
.section__head-addition
	display flex
.head-addition-text
	font-size: 14px;
	line-height: 16px;
	text-align: right;
	margin auto 14px
	&:first-child
		margin auto 14px auto 0
	&:last-child
		margin auto 0 auto 14px





.section.header
	height 120px
	.section-content 
		margin-top 0
		flex-direction: row;
		overflow: visible;
.logo-box
	display flex
.logo
	width: 148px;
	height: 90px;
	margin 10px 13px 20px 28px
	background url('../assets/images/logo.png')
	background-size: contain;
	background-repeat: no-repeat;
	background-position: center;
.logo-text
	display flex
	flex-direction column
	margin-top 48px
.logo-text--1
	font-family: Georgia;
	font-style: normal;
	font-weight: bold;
	font-size: 18px;
	line-height: 20px;
.logo-text--2
	font-family: Georgia;
	font-style: normal;
	font-weight: bold;
	font-size: 24px;
	line-height: 27px;
.nav-menu
	display flex
	flex 1
	justify-content: flex-end;
	margin auto
.nav-menu__elem-box
	margin auto 31px auto 31px
	cursor pointer
	position relative
	// &:first-child
	// 	margin auto 31px auto 0
	// &:last-child
	// 	margin auto 0 auto 31px
	&:hover
		.n-m-elem-box__text
			font-weight 600
	&.with-drop-down-menu
		&:before
			content ''
			width: 14px;
			height: 7px;
			position: absolute;
			bottom: -9px;
			left 50%
			transform: translate(-50%,100%) rotate(180deg);
			background url('../assets/images/arrow-top.svg')
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;			
		.n-m-elem-box__text
			color: #929292;
			font-weight 500
		&.open
			&:after
				content ''
				position fixed
				height 100%
				width 100%
				top 0
				left 0
				z-index 10
			.drop-down-menu
				display block
				z-index 11
			&:before
				transform: translate(-50%,100%);
			
	
.n-m-elem-box__text
	font-weight: 500;
	font-size: 18px;
	line-height: 21px;
	white-space: nowrap;
.drop-down-menu
	cursor: default;
	display none
	position: absolute;
	top 40px
	right: -20px;
	background: rgba(255, 255, 255, 0.9);
	min-width 316px
	padding 18px 20px
	box-sizing: border-box;
.drop-down-menu__elem
	cursor pointer
	font-weight: 500;
	font-size: 14px;
	line-height: 16px;
	margin 20px 0 20 0
	white-space: nowrap;
	display flex
	&:first-child
		margin 0 0 20px 0
	&:last-child
		margin 20px 0 0 0
	&:hover
		font-weight 600
.drop-down-menu__elem-text
	text-align: right;
	flex: 1;



.section.footer
	background dark-violet-blue
	.section__head-title
		font-family: Georgia;
		font-style: normal;
		font-weight: bold;
		font-size: 36px;
		line-height: 41px;
		text-align: center;
		color: #FFFFFF;
		margin auto


.section.outstanding
	background dark-violet-blue
	.section__head
		border-bottom none
		position relative
		&:before
			content ''
			position absolute
			width 107px
			background golden
			height 1px
			bottom: 0;
			left: 0;
	.section__head-title
		color: #FFFFFF;



.section.hero
	height: 350px;
	position relative
	.section-content
		margin-top 0
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;
		display none
		&.open 
			display flex
.hero-info
	margin: auto 60% auto 56px;
	position relative
	min-width 400px
	padding 38px
	&:before
		content ''
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		background: #2A3747;
		mix-blend-mode: multiply;
		opacity: 0.5;
.hero-info-text
	font-family: Georgia;
	font-style: normal;
	font-weight: bold;
	font-size: 36px;
	line-height: 41px;
	color: #FFFFFF;
	mix-blend-mode: color-dodge;
#hero-switch
	position: absolute;
	bottom: 10px;
	left 50%
	transform: translate(-50%,0%);
.hero-switch-elem
	width 10px
	height 10px
	border-radius 100%
	padding: 0;
	border: none;
	margin 0 10px
	background #FFFFFF
	opacity .5
	cursor pointer
	&:hover
		opacity 1
	&.selected
		opacity 1


.grid-images
	margin-top 50px
	display flex
	flex 1
	transform: translate(-10px,0);
	width: calc(100% + 20px);
	.grid-images__box
		display flex
		&.column
			flex-direction column
		&.big
			flex 1
			.grid-images__img
				width 100%
				height: calc(100% - 20px);	
	.grid-images__img
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center;
		width: 280px;
		height: 280px;
		margin 10px
		position relative
		.grid-images__title
			display none
		&:hover
			.grid-images__title
				display flex
				position absolute
				width 100%
				bottom 0
				left 0
				.grid-images__title-text
					display -webkit-box
					
					mix-blend-mode: color-dodge;
					z-index 1
					margin auto 24px 25px 24px
					font-weight: 500;
					font-size: 18px;
					line-height: 21px;
					color: #FFFFFF;
					
					-webkit-line-clamp: 5;
					-webkit-box-orient: vertical;
					overflow: hidden;
					text-overflow: ellipsis;
					
					min-height 45px
					height: auto;
					max-height: 155px;
					
					padding: 25px 0 0 0;
					box-sizing: border-box;
				&:after
					content ''
					position absolute
					background: #3F3C47;
					mix-blend-mode: multiply;
					opacity: 0.5;
					height 100%
					width 100%
					bottom 0
					left 0


// .section.two
.section-two-bloks
	display flex
	flex-direction: row;
.section-two-bloks__block
	flex 1
	margin 0 10px
	&:first-child
		margin 0 10px 0 0
	&:last-child
		margin 0 0 0 10px
.organizations-box
	margin-top 40px
	background: #F2F2F2;
	padding 23px 24px 33px 20px
	display: flex;
	flex-direction: column;
	justify-content: space-between;
.organizations-box__organization
	display flex
	margin 30px 0 0 0
	&:first-child
		margin 0
.organization-info__title
	font-weight: 500;
	font-size: 18px;
	line-height: 21px;
.organization-info__text
	font-size: 14px;
	line-height: 16px;
	color: #929292;
	margin-top 15px
.organization__logo
	width: 90px;
	height: 90px;
	min-width: 90px;
	min-height: 90px;
	mix-blend-mode: darken;
	margin: auto 0 auto 27px;

	background-size: contain;
	background-repeat: no-repeat;
	background-position: center;